import java.io.*;
import java.util.*;
class reverse
{
public static void main(String args[])
{
int reverse=0,number,rem;
Scanner u=new Scanner(System.in);
System.out.println("enter the number:");
number=u.nextInt();
while(number!=0)
{
rem= number % 10;
reverse= reverse*10 + rem;
number= number/10;
}
System.out.println("reverse number" + reverse);
}
}
